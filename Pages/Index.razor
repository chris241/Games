@page "/index"
@using GamesStore.Models
<PageTitle>Game Catalog</PageTitle>
<h1>Game Catalog</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <th>Id</th>
        <th>Name</th>
        <th>Genre</th>
        <th>Price</th>
        <th>ReleaseDate</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var game in games)
        {
            <tr>
                <td>@game.Id</td>
                <td>@game.Name</td>
                <td>@game.Genre</td>
                <td>@game.Price</td>
                <td>@game.ReleaseDate.ToString("MM/yy/dd")</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>


